@model IW7PP.Models.UserModel

@{
    ViewData["Title"] = "Editar Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-sm" style="max-width: 600px; width: 100%;">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Editar Perfil de Usuario</h2>
            <form asp-controller="Account" asp-action="EditAccount" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group mb-3">
                    <label for="Name">Nombre:</label>
                    <input type="text" class="form-control" id="Name" asp-for="Name" disabled>
                </div>
                <div class="form-group mb-3">
                    <label for="LastName">Apellido:</label>
                    <input type="text" class="form-control" id="LastName" asp-for="LastName" disabled>
                </div>
                <div class="form-group mb-3">
                    <label for="UserName">Número de cédula:</label>
                    <input type="text" class="form-control" id="UserName" asp-for="UserName" required>
                </div>
                <div class="form-group mb-3">
                    <label for="PhoneNumber">Número de Teléfono:</label>
                    <input type="text" class="form-control" id="PhoneNumber" asp-for="PhoneNumber" required>
                </div>
                <div class="form-group mb-3">
                    <label for="Email">Correo Electrónico:</label>
                    <input type="email" class="form-control" id="Email" asp-for="Email" required>
                </div>
                <div class="form-group mb-3">
                    <input type="submit" class="btn btn-primary w-100" value="Editar">
                </div>
                @if (ViewData["Mensaje"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewData["Mensaje"]
                    </div>
                }
            </form>
        </div>
    </div>
</div>

<style>
    body {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .min-vh-100 {
        min-height: 100vh;
    }
</style>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
