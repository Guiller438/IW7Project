@model IW7PP.Models.ProsthesisM.Liner

@{
    ViewBag.Title = "Create Liner";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h3 class="card-title text-center">Editar Liner</h3>
        <form asp-controller="Liner" asp-action="EditLiner" method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="row mt-4">
                <div class="col-sm-6 offset-sm-3">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Ingresa el nombre del Liner" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <input asp-for="Description" class="form-control" placeholder="Ingresa la descripción del liner" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Durability" class="form-label"></label>
                        <input asp-for="Durability" class="form-control" type="number" step="0.01" placeholder="Ingresa la durabilidad del liner" />
                        <span asp-validation-for="Durability" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-sm-10 offset-sm-1">
                            <button type="submit" class="btn btn-success w-100 btn-lg">Editar <i class="bi bi-arrow-right-circle-fill"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
