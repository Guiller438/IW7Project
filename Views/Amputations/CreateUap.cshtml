@model IW7PP.Models.Amputations.UpperLimbAmputation

@{
    ViewData["Title"] = "Crear nueva amputación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h3 class="card-title text-center">Crear Nueva amputación</h3>
        <form asp-controller="Amputations" asp-action="CreateUap" method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="row mt-4">
                <div class="col-sm-6 offset-3">
                    <div class="mb-3">
                        <label asp-for="AmputationName" class="col-md-2"></label>
                        <input asp-for="AmputationName" class="form-control" placeholder="Ingresa el nombre de la amputación" />
                        <span asp-validation-for="AmputationName" class="text-danger"></span>
                    </div>


                    <div class="row">
                        <div class="col-sm-10 offset-2">
                            <button type="submit" class="btn btn-success w-75 btn-lg">Crear Amputación<i class="bi bi-arrow-right-circle-fill"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


