@model IW7PP.ViewModel.RegistroVM

@{
    Layout = null;
}
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }

    .card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        max-width: 500px; /* Reducir el tamaño máximo */
        width: 100%;
        overflow: hidden;
        margin: 10px; /* Reducir el margen */
    }

    .card-body {
        padding: 10px; /* Reducir el padding */
    }

    h2 {
        text-align: center;
        margin-bottom: 10px; /* Reducir el margen inferior */
        font-size: 20px; /* Ajustar tamaño de la fuente */
    }

    .form-group {
        margin-bottom: 8px; /* Reducir el margen inferior */
    }

        .form-group label {
            display: block;
            margin-bottom: 3px; /* Reducir el margen inferior */
            font-size: 14px; /* Ajustar tamaño de la fuente */
        }

        .form-group input {
            width: 100%;
            padding: 6px; /* Reducir el padding */
            box-sizing: border-box;
            font-size: 14px; /* Ajustar tamaño de la fuente */
        }

            .form-group input[type="submit"] {
                background-color: #4CAF50;
                color: white;
                border: none;
                cursor: pointer;
                width: 100%;
                padding: 8px; /* Reducir el padding */
                font-size: 14px; /* Ajustar tamaño de la fuente */
            }

                .form-group input[type="submit"]:hover {
                    background-color: #45a049;
                }
</style>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Página de Registro</title>

    <style>
    </style>
</head>
<body>
    <div class="card">
        <div class="card-body">
            <h2>Registro</h2>
                <form asp-controller="Users" asp-action="Registro" class="card-body" method="post">
                    <div class="form-group">
                        <label for="nombre">Nombre:</label>
                        <input required asp-for="Name"> 
                    </div>
                    <div class="form-group">
                        <label for="LastName">Apellido:</label>
                        <input required asp-for="LastName"> 
                    </div>
                    <div class="form-group">
                        <label for="UserName">Número de cédula:</label>
                        <input required asp-for="UserName">
                    </div>
                    <div class="form-group">
                        <label for="telefono">Número de Teléfono:</label >
                        <input required asp-for="PhoneNumber">
                    </div>
                    <div class="form-group">
                        <label for="correo">Correo Electrónico:</label>
                        <input required asp-for="Email">
                    </div>
                    <div class="form-group">
                        <label for="contrasena">Contraseña:</label>
                        <input type="password"required asp-for="Password">
                    </div>
                    <div class="form-group">
                        <label for="ConfirmarContrasena">Confirmar Contraseña:</label>
                    <input type="password" required asp-for="ConfirmPassword">
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Registrarse">
                    </div>
                    <div class="form-group">
                        <a asp-controller="Users" asp-action="Login">¿Ya tienes una cuenta? </a>
                    </div>

                    @if(ViewData["Mensaje"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewData["Mensaje"]
                        </div>
                    }
                </form>
       </div>
    </div>
</body>
</html>


